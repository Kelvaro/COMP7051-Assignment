<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <Button
        android:id="@+id/activateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="26dp"
        android:text="Activate Beacon"
        android:layout_marginStart="39dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Cancel"
        android:text="Cancel"
        android:layout_alignBaseline="@+id/activateButton"
        android:layout_alignBottom="@+id/activateButton"
        android:layout_toEndOf="@+id/activateButton"
        android:layout_marginStart="48dp" />

    <EditText
        android:id="@+id/editLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="City, Country"
        android:inputType="textPersonName"
        android:layout_above="@+id/activateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="184dp" />

    <EditText
        android:id="@+id/editGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name of Game"
        android:inputType="textPersonName"
        android:selectAllOnFocus="false"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editLocation"
        android:layout_marginTop="81dp" />

</RelativeLayout>